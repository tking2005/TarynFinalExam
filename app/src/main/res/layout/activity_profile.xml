<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/large_profile_imagview"
            android:layout_width="@dimen/large_image_width_height"
            android:layout_height="@dimen/large_image_width_height"
            app:srcCompat="@drawable/people_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/whitespace_under_large_icon"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:src="@drawable/heart_icon"
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="@dimen/image_button_width_height"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
        <ImageButton
            android:src="@drawable/email_icon2"
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="@dimen/image_button_width_height"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
        <ImageButton
            android:src="@drawable/messaging_contacts_icon2"
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="@dimen/image_button_width_height"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
        <ImageButton
            android:src="@drawable/x_logout_icon"
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="@dimen/image_button_width_height"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="wrap_content"
            android:text="@string/button_1"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
        <TextView
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="wrap_content"
            android:text="@string/button_2"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
        <TextView
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="wrap_content"
            android:text="@string/button_3"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
        <TextView
            android:layout_width="@dimen/image_button_width_height"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/profile_image_button_text_margins"
            />
    </LinearLayout>


</LinearLayout>