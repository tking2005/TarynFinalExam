<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/drawer_list_item_layout_id"
    android:gravity="center_vertical">

   <ImageView
       android:id="@+id/drawer_list_item_imageview"
       android:src="@drawable/people_icon"
       android:layout_width="@dimen/drawer_icon_width_height"
       android:layout_height="@dimen/drawer_icon_width_height"
       android:paddingLeft="@dimen/drawer_icon_padding"
       android:gravity="center_vertical"
       />

    <TextView
        android:id="@+id/drawer_list_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testing"
        android:gravity="center_vertical"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>




</LinearLayout>